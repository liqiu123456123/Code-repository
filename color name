import nltk
import re
from nltk.tokenize import word_tokenize
from nltk.pos_tag import pos_tag

# 假设我们有一个简单的颜色词库
color_words = set(['red', 'blue', 'green', 'yellow', 'orange', 'purple', 'pink', 'brown', 'gray', 'white', 'black'])

def extract_color_noun_combinations(text):
    # 标记和词性标注文本
    tokens = word_tokenize(text)
    tagged = pos_tag(tokens)
    
    color_noun_combinations = []
    color_word = None
    
    for word, pos in tagged:
        word = word.lower()
        
        # 检查颜色
        if word in color_words and pos.startswith('JJ') and not color_word:
            color_word = word
        elif color_word and pos.startswith('NN') or pos.startswith('NNS'):  # NN 是单数名词，NNS 是复数名词
            color_noun_combinations.append(f"{color_word} {word}")
            color_word = None  # 重置颜色词，以便寻找下一个组合
    
    return color_noun_combinations

# 示例段落
text = "She wears a pink jacket and a blue shirt. Her favorite color is green."
color_noun_combinations = extract_color_noun_combinations(text)
print("Color + Noun Combinations:", color_noun_combinations)
